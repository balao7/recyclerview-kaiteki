<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@android:color/white</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">#fff</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowSharedElementEnterTransition" tools:targetApi="lollipop">@android:transition/move
        </item>
        <item name="android:windowSharedElementExitTransition" tools:targetApi="lollipop">@android:transition/move
        </item>

        <!--<item name="android:windowSharedElementsUseOverlay" tools:targetApi="lollipop">false</item>-->
